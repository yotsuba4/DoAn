<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BillDetailActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bill_detail_activity_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mã hóa đơn: " />

        <TextView
            android:id="@+id/tv_bill_detail_activity_bill_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đã thanh toán"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bill_detail_activity_bill_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian: " />

    <TextView
        android:id="@+id/tv_bill_detail_activity_restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cơm gà Thái hòa" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_bill_detail__food_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bill_deatail_activity_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13pt"
            android:text="Tổng cộng" />

        <TextView
            android:id="@+id/tv_bill_detail_activity_bill_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13pt"
            android:text="0đ" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bill_detail_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:text="Xác nhận mua">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bill_detail_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Hủy bỏ">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cdio4.cots.foodoffer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOffer">
        <activity android:name=".ChangePasswordActivity"></activity>
        <activity android:name=".SignUpActivity" />
        <activity
            android:name=".RestaurantDetailActivity"
            android:theme="@style/Theme.FoodOffer.NoActionBar" />
        <activity
            android:name=".FoodDetailActivity"
            android:theme="@style/Theme.FoodOffer.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.FoodOffer.NoActionBar" />
        <activity android:name=".CartActivity" />
        <activity android:name=".AboutUsActivity" />
        <activity
            android:name=".MainActivity"
            android:label=""
            android:theme="@style/Theme.FoodOffer.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>